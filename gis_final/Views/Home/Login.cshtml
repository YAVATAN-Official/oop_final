
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <meta name="author" content="yashar azadvatan" />
    <link href="~/font-awesome/css/all.min.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body>
    <div class="row m-0">
        <div class="col-4"></div>
        <div class="col-4">
            
            <form asp-action="Login" method="post">
                <div class="mt-5">
                    @if (@ViewBag.msg != null)
                    {
                        <span class="alert-danger p-2">@ViewBag.msg</span>
                    }
                </div>
                <div class="text-center p-2">
                    <img src="~/image/logo.jpg" style="width:100px;height:auto;" />
                </div>
                <div class="card " >
                    <div class="card-header">Login</div>
                    <div class="card-body">
                        <div class="mt-3">
                            <i class="fas fa-user"></i> Email
                            <input type="text" name="Email" placeholder="Email" class="form-control" value="" />
                        </div>
                        <div class="mt-3">
                            <i class="fas fa-key"></i> Password
                            <input type="password" name="Password" placeholder="Password" class="form-control" value="" />
                        </div>
                        <div class="mt-5">
                            <div class="text-center">
                                <input type="submit" value="Login" class="btn btn-primary" style="width:50%" />
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</body>
</html>
