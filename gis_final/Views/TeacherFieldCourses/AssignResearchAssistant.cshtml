@model gis_final.Models.TeacherFieldCourseResearchAssistant

@{
    ViewData["Title"] = "AssignResearchAssistant";
}

<h1>Assign Research Assistant</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="AddResearchAssistant">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="TeacherFieldCourseId" class="control-label">Teacher Field Course</label>
                <select asp-for="TeacherFieldCourseId" class="form-control" asp-items="ViewBag.TeacherFieldCourseId"></select>
                <span asp-validation-for="TeacherFieldCourseId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AssistantId" class="control-label">Assistant</label>
                <select asp-for="AssistantId" class="form-control" asp-items="ViewBag.AssistantId"></select>
                <span asp-validation-for="AssistantId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
 