@model gis_final.Models.TeacherFieldCourse

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>TeacherFieldCourse</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <span><b>@ViewData["User"]</b></span>
                <input type="hidden" name="UserId" value=" @ViewBag.teacherId" />
                <input type="hidden" name="FieldCoursesId" value=" @ViewBag.fcId" />
            </div>
            <div class="form-group">
                <label class="control-label">Field</label>
                <label class="control-label">@ViewBag.Field</label>
            </div>
            <div class="form-group">
                <label class="control-label">Course</label>
                <label class="control-label">@ViewBag.Course</label>
            </div>
            <div class="form-group">
                <label asp-for="time" class="control-label"></label>
                <input asp-for="time" class="form-control" placeholder="ex. 14:00-16:00" />
                <span asp-validation-for="time" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DayId" class="control-label">Day</label>
                <select asp-for="DayId" class="form-control" asp-items="Html.GetEnumSelectList<EnumDays>()">
                </select>
                <span asp-validation-for="DayId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StatusId" class="control-label"></label>
                <select asp-for="StatusId" class="form-control" asp-items="Html.GetEnumSelectList<EnumStatus>()">
                </select>
                <span asp-validation-for="StatusId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
