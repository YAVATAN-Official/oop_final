@model IEnumerable<gis_final.Models.Field>

@{
    ViewData["Title"] = "Index";
}

<h3>Index</h3>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Faculty)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Faculty.Title)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id"> <i class="fa fa-edit"></i></a> |
                    <a asp-action="Details" asp-route-id="@item.Id">
                        <i class="fa fa-info"></i>
                    </a> |
                    <a asp-action="Delete" asp-route-id="@item.Id"><i class="fa fa-trash text-danger"></i></a>

                </td>
            </tr>
        }
    </tbody>
</table>
